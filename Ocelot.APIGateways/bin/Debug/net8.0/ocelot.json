    //ProductMicroService
    {
      "UpstreamPathTemplate": "/gateway/Product/getProduct/{productId}",
      "DownstreamPathTemplate": "/api/Product/getProduct/{productId}",
      "DownstreamHostAndPorts": [
        {
          "Host": "product.api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamScheme": "http",

      "RateLimitOptions": {
        "Limit": 3,
        "Period": "1m",
        "HttpStatusCode": 429,
        "EnableRateLimiting": true,
        "PeriodTimespan": 30,
        "ClientWhitelist": [
          // send this value request header with key "Client-Id" and value like below
          "Client1",
          "Client2"
        ],
        "ClientIdHeader": "Client-Id"
      },
      // Caching
      "FileCacheOptions": {
        "TtlSeconds": 30
        //"Region": "orders"
      }
    },
    {
      "UpstreamPathTemplate": "/gateway/Product/getAllProduct",
      "DownstreamPathTemplate": "/api/Product/getAllProduct",
      "DownstreamHostAndPorts": [
        {
          "Host": "product.api",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": [ "Get" ],
      "UpstreamScheme": "http",

      //FluatTolerence
      "QoSOptions": {
        "ExceptionsAllowedBeforeBreaking": 3,
        "DurationOfBreak": 100000,
        "TimeoutValue": 5000
      },

      "RetryOptions": {
        "RetryCount": 3,
        "RetryOnServerError": true
      },

      "RateLimitOptions": {
        "Limit": 3,
        "Period": "1m",
        "HttpStatusCode": 429,
        "EnableRateLimiting": true,
        "PeriodTimespan": 30,
        "ClientWhitelist": [
          // send this value request header with key "Client-Id" and value like below
          "Client1",
          "Client2"
        ],
        "ClientIdHeader": "Client-Id"
      }
    }

